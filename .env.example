# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=app
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PostgreSQL Connection URLs
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"
DIRECT_URL="${DATABASE_URL}"  # Used by Prisma for direct database access

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}"

# MinIO Configuration
MINIO_ROOT_USER=your_minio_access_key
MINIO_ROOT_PASSWORD=your_minio_secret_key
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT="http://${MINIO_HOST}:${MINIO_PORT}"
MINIO_CONSOLE_ENDPOINT="http://${MINIO_HOST}:${MINIO_CONSOLE_PORT}"

# MinIO Browser URL (for client-side access)
NEXT_PUBLIC_MINIO_BUCKET_URL="http://${MINIO_HOST}:${MINIO_PORT}/your-bucket-name"

# Application URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:3000/api"

# Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
TURBO_TELEMETRY_DISABLED=1
