{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "packages/ui/styles/**",
      ".vscode/extensions.json",
      ".vscode/settings.json",
      "packages/ui/shadui/**"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off"
      }
    }
  }
}
